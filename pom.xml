<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.fiturriz.logging</groupId>
    <artifactId>testing-logging</artifactId>
    <packaging>pom</packaging>
    <version>0.1.6-SNAPSHOT</version>

    <modules>
        <module>poc-json-log-log4j2</module>
        <module>poc-json-log-logabck</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>
        <com.springframework.boot.version>1.4.4.RELEASE</com.springframework.boot.version>
        <org.apache.maven.compiler.version>3.6.1</org.apache.maven.compiler.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-web</artifactId>
                <version>${com.springframework.boot.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-log4j2</artifactId>
                <version>${com.springframework.boot.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${com.springframework.boot.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${org.apache.maven.compiler.version}</version>
                    <configuration>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.3</version>
                <!--<configuration>-->
                    <!--<tagNameFormat>RC-v@{project.version}</tagNameFormat>-->
                <!--</configuration>-->
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <snapshotRepository>
            <id>befitca-snapshots</id>
            <name>Befitca Snapshot Repository</name>
            <url>http://localhost/artifactory/befitca-development</url>
        </snapshotRepository>
        <repository>
            <id>befitca-releases</id>
            <name>Befitca Release Repositoy</name>
            <url>http://localhost/artifactory/befitca</url>
        </repository>
    </distributionManagement>

    <scm>
        <connection>scm:git:https://github.com/fiturrizagac/testing-json-log.git</connection>
        <url>https://github.com/fiturrizagac/testing-json-log.git</url>
      <tag>HEAD</tag>
  </scm>


</project>